require "/opt/god/conditions/JvmHeapUsage.rb"

God::Contacts::Email.defaults do |d|

	d.from_email = "<%= @from_email %>"
	d.from_name = "Mobile Team Kitchener"
	d.delivery_method = :smtp

	d.server_host = "<%= @tunnel_server_host %>"
	d.server_port = "<%= @tunnel_server_port %>"
	d.server_auth = "plain"

	d.server_domain = "<%= @server_domain %>"
	d.server_user = "<%= @server_user %>"
	d.server_password = "<%= @server_password %>"
end

God.contact(:email) do |c|
	c.name = "tntdevs"
	c.group = "developers"
	c.to_email = "<%= @to_email %>"
end

God.watch do |w|
	w.name = "tntNucleusService-<%= @service_env %>"
	w.start = ""
	w.stop = ""
	w.restart = "service jetty restart"
	w.pid_file = "/var/run/jetty.pid"	# this is the pid file for jetty started by upstart as a service

	w.behavior(:clean_pid_file)

	# determine the state on startup
	w.transition(:init, :up) do |on|
		on.condition(:process_running) do |c|
			c.interval = 1.day
			c.running = true
			c.notify = {:contacts => ['tntdevs'], :category => 'SERVICE_UP', :priority => 5}
		end
	end

	# determin conditions for restart
	w.restart_if do |restart|
		restart.condition(:jvm_heap_usage) do |c|
			c.interval = 30.seconds
			c.above = 70.percent
			c.times = [4, 5] # 4 out of 5 intervals
			c.notify = {:contacts => ['tntdevs'], :category => 'SERVICE_RESTART', :priority => 1}
		end

		restart.condition(:process_running) do |c|
			c.interval = 1.minute
			c.running = false
			c.notify = {:contacts => ['tntdevs'], :category => 'SERVICE_RESTART', :priority => 1}
		end
	end

	# watch for service flapping
	w.lifecycle do |on|
		on.condition(:flapping) do |c|
			c.to_state = :restart
			c.times = 2
			c.within = 5.minutes
			c.notify = {:contacts => ['tntdevs'], :category => 'SERVICE_FLAPPING', :priority => 1}
		end
	end
end